---
import Layout from '../../layouts/Layout.astro';
import MonitoringPanel from '../../components/bitsabots/MonitoringPanel.astro';
---

<Layout title="BitsaBots Monitor | Live Status">
  <main class="min-h-screen bg-background-dark_main flex flex-col items-center justify-center p-4">
    <div class="w-full max-w-5xl space-y-8">
      
      <!-- Top Section -->
      <div class="text-center space-y-4">
        <h1 class="font-orbitron text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-brand-blue">
          SYSTEM STATUS
        </h1>
        <p class="font-body text-gray-400 text-lg max-w-2xl mx-auto">
          High-performance monitoring dashboard for QR Payment Gateways and Mission Critical APIs.
        </p>
        <div class="flex justify-center space-x-2">
            <span class="px-3 py-1 bg-primary/10 border border-primary/30 rounded-full text-xs text-primary font-technical uppercase">Node.js</span>
            <span class="px-3 py-1 bg-brand-bitsabots/10 border border-brand-bitsabots/30 rounded-full text-xs text-brand-bitsabots font-technical uppercase">Python</span>
            <span class="px-3 py-1 bg-brand-orange/10 border border-brand-orange/30 rounded-full text-xs text-brand-orange font-technical uppercase">PostgreSQL</span>
        </div>
      </div>

      <!-- Dashboard Component -->
      <MonitoringPanel />

      <!-- Footer/Context -->
      <div class="text-center pt-12 border-t border-primary/10 mt-12">
        <p class="text-xs text-gray-500 font-technical">
          AUTHORIZED ACCESS ONLY // BITSA-BOTS CORE INFRASTRUCTURE
        </p>
        <p class="text-xs text-gray-600 mt-2">
            Designed & Engineered by Pedro Carranza
        </p>
      </div>

    </div>
  </main>
</Layout>
