<script>
  // Simulation Logic for Live Metrics
  const updateMetrics = () => {
    // Latency Simulation (random between 45ms and 120ms)
    const latency = Math.floor(Math.random() * (120 - 45 + 1) + 45);
    const latencyEl = document.getElementById('metric-latency');
    if (latencyEl) {
        latencyEl.innerText = `${latency}ms`;
        latencyEl.style.color = latency < 100 ? '#27ae60' : '#f1c40f'; // Green or Warning
    }

    // Success Rate Simulation (random between 98.5% and 99.9%)
    const successRate = (Math.random() * (99.9 - 98.5) + 98.5).toFixed(2);
    const successEl = document.getElementById('metric-success');
    if (successEl) successEl.innerText = `${successRate}%`;
  };

  // Live Logs Simulation
  const logs = [
    "[INFO] Checking QR payment gateway connectivity...",
    "[INFO] Authorizing transaction TX-8892-ALPHA...",
    "[SUCCESS] Gateway response: 200 OK (52ms)",
    "[INFO] Syncing invoicing nodes...",
    "[DEBUG] Heartbeat received from ATC-CORE.",
    "[INFO] Validating merchant credentials...",
    "[SUCCESS] Token refreshed for node BITS-04.",
    "[WARN] High traffic detected in sector 7, scaling up..."
  ];

  const addLog = () => {
    const logContainer = document.getElementById('live-logs');
    if (!logContainer) return;
    
    const randomLog = logs[Math.floor(Math.random() * logs.length)];
    const timestamp = new Date().toISOString().split('T')[1].split('.')[0];
    const logEntry = document.createElement('div');
    logEntry.className = "text-xs text-brand-blue/80 font-technical mb-1";
    logEntry.innerText = `> ${timestamp} ${randomLog}`;
    
    logContainer.prepend(logEntry);
    
    // Keep only last 10 logs
    if (logContainer.children.length > 10) {
      logContainer.removeChild(logContainer.lastChild);
    }
  };

  // Start intervals
  setInterval(updateMetrics, 2000);
  setInterval(addLog, 1500);
</script>

